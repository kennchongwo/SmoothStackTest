@model SStack.ViewModel.AddProductVM

    @{
        ViewBag.Title = "Add Product";
    }

    <h2>Add Product</h2>
    <div>
        <div class="row">
            <div class="col-md-12">
                <div class="p-3 mb-2 bg-secondary text-white">Add Product to Cart: @Model.Product.ProductName</div>
            </div>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-3" style="padding-top:20px;">
                        <b>Order: </b><i>@Model.Product.ProductName</i>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">

                            <div class="col-md-12">
                                <label for="qty">Enter Quatity To Order</label>
                                <input type="number" name="qty" id="qty" class="form-control" required />
                            </div>
                        </div>
                        <div style="margin-top:12px;">
                            <input type="submit" value="Save - > >" class="btn btn-primary" style="float:right;" />
                        </div>
                        
                    </div>
                    <div class="col-md-3"></div>
                </div>

                }
            </div>


        </div>
        <div class="row">

        </div>
        <div class="row">

        </div>
        <div class="row">

        </div>
    </div>
